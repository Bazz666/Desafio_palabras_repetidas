<%= form_with(model: variation, local: true) do |form| %>
  <% if variation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(variation.errors.count, "error") %> prohibited this variation from being saved:</h2>

      <ul>
      <% variation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <div class="field">
    <%= form.label :stock %>
    <%= form.number_field :stock %>
  </div>

  <div class="field">
    <%= form.label :sku %>
    <%= form.text_field :sku %>
  </div>

  
  <div class="field">
    <%= form.label :product_id %>
    <%= collection_select(:variations, :product_id, Product.all, :id, :name, :prompt => true) %>
  </div>

  <div class="field">
    <%= form.label :size_id %>
    <%= collection_select(:products, :size_id, Size.all, :id, :name, :prompt => true) %>
  </div>

  <div class="field">
    <%= form.label :color_id %>
    <%= collection_select(:products, :color_id, Color.all, :id, :name, :prompt => true) %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
